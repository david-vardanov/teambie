<% layout('layouts/boilerplate') %>

<div class="page-header">
    <h1><%= employee.name %></h1>
    <a href="/employees/<%= employee.id %>/edit" class="btn btn-primary">Edit</a>
</div>

<% if (locals.message) { %>
    <div class="alert alert-<%= message.type %>" style="margin-bottom: 20px;">
        <%= message.text %>
    </div>
    <% delete locals.message; %>
<% } %>

<div class="card">
    <div class="card-body">
        <p><strong>Email:</strong> <%= employee.email %></p>
        <p><strong>Start Date:</strong> <%= employee.startDate.toDateString() %></p>
        <p><strong>Vacation Days Per Year:</strong> <%= employee.vacationDaysPerYear %></p>
    </div>
</div>

<% if (isAdmin) { %>
<div class="card">
    <div class="card-body">
        <h2>Account & Permissions</h2>
        <% if (linkedUser) { %>
            <p><strong>User Account:</strong> <span class="badge badge-success">Active</span></p>
            <p><strong>Role:</strong>
                <% if (linkedUser.role === 'ADMIN') { %>
                    <span class="badge badge-admin">üëë Admin</span>
                <% } else { %>
                    <span class="badge badge-employee">üë§ Employee</span>
                <% } %>
            </p>
            <div style="margin-top: 15px;">
                <% if (linkedUser.role === 'ADMIN') { %>
                    <form action="/employees/<%= employee.id %>/demote" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-secondary" onclick="return confirm('Demote <%= employee.name %> from admin to employee?')">
                            Demote to Employee
                        </button>
                    </form>
                <% } else { %>
                    <form action="/employees/<%= employee.id %>/promote" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-primary" onclick="return confirm('Promote <%= employee.name %> to admin?')">
                            Promote to Admin
                        </button>
                    </form>
                <% } %>
            </div>
            <div style="margin-top: 10px; padding: 10px; background-color: #f8f9fa; border-radius: 5px; font-size: 13px;">
                <strong>Admin Permissions:</strong> View all employees, approve/reject events, manage settings, broadcast messages
            </div>
        <% } else { %>
            <p><strong>User Account:</strong> <span class="badge badge-secondary">Not Created</span></p>
            <p style="color: #666; font-size: 14px; margin-top: 10px;">
                This employee doesn't have a login account yet. Create one to enable system access.
            </p>
            <div style="margin-top: 15px; padding: 15px; background-color: #f8f9fa; border-radius: 5px;">
                <h4 style="margin-top: 0;">Create User Account</h4>
                <form action="/employees/<%= employee.id %>/create-user" method="POST">
                    <div style="margin-bottom: 15px;">
                        <label style="display: block; margin-bottom: 5px;"><strong>Password:</strong></label>
                        <input type="password" name="password" required minlength="6"
                               placeholder="Enter password (min 6 characters)"
                               style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                    </div>
                    <div style="margin-bottom: 15px;">
                        <label style="display: block; margin-bottom: 5px;"><strong>Role:</strong></label>
                        <select name="role" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                            <option value="EMPLOYEE">Employee</option>
                            <option value="ADMIN">Admin</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Account</button>
                </form>
            </div>
        <% } %>
    </div>
</div>
<% } %>

<div class="card">
    <div class="card-body">
        <h2>Telegram Bot Settings</h2>
        <% if (employee.telegramUserId) { %>
            <p><strong>Status:</strong> <span class="badge badge-success">‚úÖ Connected</span></p>
            <p><strong>Telegram ID:</strong> <%= employee.telegramUserId %></p>
        <% } else { %>
            <p><strong>Status:</strong> <span class="badge badge-secondary">‚ùå Not Connected</span></p>
            <p style="color: #666; font-size: 14px;">Employee needs to start a chat with the bot and link their account.</p>
        <% } %>

        <hr style="margin: 15px 0;">

        <p><strong>Work Schedule:</strong></p>
        <ul style="margin-left: 20px;">
            <li>Arrival Window: <%= employee.arrivalWindowStart %> - <%= employee.arrivalWindowEnd %></li>
            <li>Work Hours: <%= employee.workHoursPerDay %> hours/day</li>
            <% if (employee.halfDayOnFridays) { %>
                <li>Fridays: <%= employee.workHoursOnFriday %> hours (Half Day)</li>
            <% } else { %>
                <li>Fridays: <%= employee.workHoursPerDay %> hours (Full Day)</li>
            <% } %>
            <% if (employee.recurringHomeOfficeDays && employee.recurringHomeOfficeDays.length > 0) { %>
                <li>Recurring Home Office:
                    <%
                        const dayNames = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                        const homeOfficeDays = employee.recurringHomeOfficeDays.map(d => dayNames[d]).join(', ');
                    %>
                    <%= homeOfficeDays %>
                </li>
            <% } %>
        </ul>
    </div>
</div>

<div class="vacation-stats card">
    <div class="card-body">
        <h2>Vacation Summary (<%= new Date().getFullYear() %>)</h2>
        <div class="stats-grid">
            <div class="stat">
                <div class="stat-label">Days Taken</div>
                <div class="stat-value"><%= vacationDaysTaken %></div>
            </div>
            <div class="stat">
                <div class="stat-label">Days Remaining</div>
                <div class="stat-value"><%= vacationDaysLeft %></div>
            </div>
            <div class="stat">
                <div class="stat-label">Total Allowance</div>
                <div class="stat-value"><%= employee.vacationDaysPerYear %></div>
            </div>
        </div>
    </div>
</div>

<div class="events-section">
    <h2>All Events</h2>
    <% if (employee.events.length > 0) { %>
        <div class="events-list">
            <% employee.events.forEach(event => { %>
                <div class="event-row">
                    <span class="badge badge-<%= event.type.toLowerCase().replace(/_/g, '-') %>"><%= event.type.replace(/_/g, ' ') %></span>
                    <span><%= event.startDate.toDateString() %></span>
                    <% if (event.endDate) { %>
                        <span>to <%= event.endDate.toDateString() %></span>
                    <% } %>
                    <% if (event.notes) { %>
                        <span><%= event.notes %></span>
                    <% } %>
                    <a href="/events/<%= event.id %>" class="btn btn-sm btn-secondary">View</a>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="empty-state">No events recorded</p>
    <% } %>
</div>

<div class="form-actions" style="margin-top: 20px;">
    <a href="/employees" class="btn btn-secondary">Back to Employees</a>
    <% if (isAdmin && !employee.archived) { %>
        <form action="/employees/<%= employee.id %>/archive" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Archive this employee? They will be moved to the archived list.')">Archive Employee</button>
        </form>
    <% } %>
</div>

<style>
.alert {
    padding: 15px;
    border-radius: 5px;
}
.alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}
.alert-error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}
.badge {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: bold;
}
.badge-admin {
    background-color: #ffc107;
    color: #000;
}
.badge-employee {
    background-color: #6c757d;
    color: #fff;
}
</style>
